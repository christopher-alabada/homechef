<div class="head-comment">
  <h1>Your bookings</h1>
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="card">
    <% @bookings.each do |booking| %>
          <div><%= booking.date %></div>
          <div><%= booking.state %></div>

          <div style="text-transform: capitalize;">
            <%= booking.chef.first_name %>
            <%= booking.chef.last_name %>
          </div>

          <div>
            <%= cl_image_tag(booking.chef.photo, class: 'chef_image') %>
          </div>

    <% end %>
      </div>
    </div>
  </div>
</div>


