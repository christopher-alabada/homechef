<div class="head-comment">
  <h1 style="color: #233142">My Chefs</h1>
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="card-wapper">

      <div class="card">
          <% @bookings.each do |booking| %>

          <div class="booking-date" style="vertical-align: middle;"><%= booking.date %></div>


          <div class="name">
            Name -
          </div>

          <div class="chef-name" style="text-transform: capitalize;">
            <p><%= booking.chef.first_name %></p>
            <p>   <%= booking.chef.last_name %></p>
          </div>

          <div class="status">
          Status -
          </div>
          <div class="book-state"><%= booking.state %></div>

          <div>
            <%= cl_image_tag(booking.chef.photo, class: 'my_chef_image') %>
          </div>

          <% end %>
    </div>
      </div>
    </div>
  </div>
</div>


