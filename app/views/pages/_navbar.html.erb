<div class="navbar-logo" style="background: rgba(0,0,0,0);">
  <!-- Logo -->

  <div class="logo-h1">
    <%= link_to root_path do %>
      <%= image_tag "https://res.cloudinary.com/harrisongarovi/image/upload/v1551157460/chef-hat-md.png", alt: "logo", height: 45, width: 35  %>
    <% end %>
    <h1>Home Chef</h1>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-right">

    <% if user_signed_in? %>
      <p style="color: black; font-weight: lighter; font-size: 18px;">Hello <%= current_user.first_name %></p>
      <%= link_to "Chefs", chefs_path, class: "navbar-item navbar-link" %>
      <%= link_to "My Chefs", foodie_bookings_path, class: "navbar-item navbar-link" %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "navbar-item navbar-link" %>
    <% else %>
      <%= link_to "Chefs", chefs_path, class: "navbar-item navbar-link" %>
      <%= link_to "Log in", new_user_session_path, class: "navbar-item navbar-link" %>
      <%= link_to "Sign up", new_user_registration_path, class: "navbar-item navbar-link" %>
    <% end %>

  </div>
</div>
