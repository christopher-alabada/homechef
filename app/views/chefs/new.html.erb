<div class="sl-page-wrapper">
<div class="container">
  <div class="sl-container">
  <div class="sl-form-wrapper">

<h2>Become a Chef!</h2>

<%= simple_form_for(@chef) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="sl-form-inputs">

    <div class="sl-form-group">
    <%= f.input :tagline, placeholder:"Attention getter" %>
    </div>
    <div class="sl-form-group">
    <%= f.input :content, placeholder:"Describe yourself" %>
    </div>

    <div class="sl-form-group">
    <%= f.input :location, placeholder:"Where are you located?"%>
    </div>


    <div class="sl-full-name">
      <div class="sl-form-group" style="margin-right: 10px; width: 300px">
      <%= f.input :radius, placeholder:"How far are you willing to go?"%>
    </div>
      <div class="sl-form-group">
      <%= f.input :units,:collection => Chef::UNITS, selected: "km"%>
    </div>
    </div>

    <div class="sl-form-group">
    <%= f.input :price, placeholder:"How much do you charge per an hour?"%>
    </div>

    <div class="sl-form-group">
    <%= f.input :card_photo, label: "Your meal photo here" %>
    <%= f.input :card_photo_cache, as: :hidden %>
    </div>
</div>

  <div class="form-actions sl-submit-btn">
  <p><%= f.button :submit, "Become a Chef!" %></p>
  </div>

<% end %>

</div>
  </div>
</div>
</div>
